
#define AnalogLDR A0
#define Limiar 1.5
#define ledPin 15

int Leitura = 0;
int buzzerPin = D5;
float VoltageLDR;
float ResLDR;

void setup(){
  pinMode(ledPin, OUTPUT);
  pinMode(buzzerPin, OUTPUT); 
  Serial.begin(115200);

  delay(100);
}

void loop(){
  Leitura = analogRead(AnalogLDR);
  VoltageLDR = Leitura * (3.3/1024);
  Serial.print("Leitura sensor LDR = ");
  Serial.println(VoltageLDR);

  if (VoltageLDR < Limiar){
    digitalWrite(ledPin, HIGH);
    tone(buzzerPin, 440, 1000); 
  } else {
    digitalWrite(ledPin, LOW);
    noTone(buzzerPin); .
  }

  delay(500); 
}
